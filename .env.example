# Environment configuration for webcam-smartDet
# Copy this file to .env and modify as needed

# Camera settings
DEFAULT_CAMERA_ID=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Model settings
DEFAULT_MODEL_PATH=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5

# Output settings
LOG_LEVEL=INFO
OUTPUT_DIR=output_videos
MODELS_DIR=models

# Performance settings
DETECTION_INTERVAL=1  # Process every N frames for better performance
USE_GPU=auto  # auto, true, false
